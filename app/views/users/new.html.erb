<h2>Signup</h2>

<%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :nausea %>
    <%= f.text_field :nausea, class: 'form-control' %>
    <%= f.label :happiness %>
    <%= f.text_field :happiness, class: 'form-control' %>
    <%= f.label :tickets %>
    <%= f.text_field :tickets, class: 'form-control' %>
    <%= f.label :height %>
    <%= f.text_field :height, class: 'form-control' %>
    <br>
    <div class="form-group">
        <%= f.label 'Check box if you are a theme park owner' %>
        <%= f.check_box :admin, class:'form-control' %>
    </div>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
    <br>
    
    <%= f.submit 'Create User'%>
<% end %>